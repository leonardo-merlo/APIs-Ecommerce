{
  "compilerOptions": {
    "strict": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": false,
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
